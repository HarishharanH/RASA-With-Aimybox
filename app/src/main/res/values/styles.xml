<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/md_cyan_600</item>
        <item name="android:colorPrimaryDark">@color/md_cyan_600</item>
        <item name="android:colorAccent">@color/md_cyan_600</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">true</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <!--Dialog without boarder-->
    <style name="FloatingDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionModeOverlay">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">.70</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

</resources>
